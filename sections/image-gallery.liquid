<div class="gallery-section">
  <h2>{{ section.settings.heading }}</h2></div>
<div class="custom-image-gallery">
  <h2>{{ section.settings.image-gallery }}</h2> <!-- Title added here -->
  {% for block in section.blocks %}
    <div class="gallery-item">
      <a href="{{ block.settings.link }}">
      <img src="{{ block.settings.image | img_url: 'large' }}" alt="{{ block.settings.image.alt | escape }}">
      <div class="overlay">{{ block.settings.text }}</div>
    </a>
    </div>
  {% endfor %}
  
</div>

<style>
  .custom-image-gallery {
    display: flex;
    flex-wrap: wrap;
    gap: 10px; /* Adjust the gap between images as needed */
  }
  .gallery-item {
    position: relative;
    width: calc(33.333% - 10px); /* 3 images per row, adjust as needed */
  }
  .gallery-item img {
    width: 100%;
    display: block;
  }
  .gallery-item .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0,0,0,0.5); /* Dark overlay, adjust color/opacity as needed */
    color: #fff; /* Text color */
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.5s ease;
    visibility: hidden;
  }
  .gallery-item:hover .overlay {
    opacity: 1;
    visibility: visible;
  }
</style>

{% schema %}
{
  "name": "Image Gallery",
   "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Gallery"
    }
  ],
  "max_blocks": 12,
  "blocks": [
    {
      "type": "image",
      "name": "Image with Overlay Text",
      "settings": [
       {
      "type": "text",
  "id": "title",
  "label": "Title"

    },
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
          
        },
        {
          "id": "text",
          "type": "text",
          "label": "Overlay Text",
          "default": "Your Text Here"
        }
      ]
      
   }
  ],
  "presets": [
    {
      "name": " Image Gallery"
    }
  ]
}
{% endschema %}